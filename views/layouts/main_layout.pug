doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title #{pageTitle}
		link(rel="stylesheet", href="/css/main.css")
		block styles

	body
		header.main-header
			nav.main-header__nav
				ul.main-header__item-list
					li.main-header__item
						a(href="/", class=(activeNav === 'home') ? 'active' : '') Shop
					li.main-header__item
						a(href="/cart", class=(activeNav==='cart') ? 'active': '') Cart
					li.main-header__item
						a(href="/admin/add-product", class=(activeNav==='add-product') ? 'active' : '') Add Product
					li.main-header__item
						a(href="/admin/products", class=(activeNav === 'admin-products') ? 'active': '') Admin products
		main
			block content
		
		script(src='/js/website.js')