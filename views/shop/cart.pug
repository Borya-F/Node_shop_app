extends ../layouts/main_layout.pug

block styles
	link(rel="stylesheet", href="/css/cart.css")

block content
	if prods.length > 0
		ul.cart__item-list
			each prod in prods
				li.cart__item
					p #{prod.title} (#{prod.cartItem.quantity})
					form(action='/cartDeleteItem', method="POST")
						input(type="hidden", value=prod.id, name="prodId")
						input(type="hidden", value=prod.price, name="prodPrice")
						button.btn(type="submit") remove from Cart
	else
		p no products currently in cart