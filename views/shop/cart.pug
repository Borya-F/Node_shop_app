extends ../layouts/main_layout.pug

block styles
	link(rel="stylesheet", href="/css/cart.css")

block content
	if prods.length > 0
		ul.cart__item-list
			each prod in prods
				li.cart__item
					h1 product: #{prod.title} 
					h2 quantity: #{prod.qty}
					form(action='/cartDeleteItem', method="POST")
						input(type="hidden", value=prod._id, name="prodId")
						button.btn(type="submit") remove from Cart
		hr
		div.centered
			form(action='/orders', method="POST")
				button.btn(type="submit") add to order
	else
		p no products currently in cart