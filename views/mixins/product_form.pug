mixin productForm(product,edit=false)

	form.product-form(action=(edit ? "/admin/edit-product/" + product.id : "/admin/add-product"), method="POST")
		.form-control
			label(for="title") Title
			input#title(type="text", name="title", value=(product ? product.title : ''))
		.form-control
			label(for="price") Price
			input#price(type="number", step="0.01", name="price", value=(product ? product.price : ''))
		.form-control
			label(for="imgURL") img URL
			input#imgURL(type="text", name="imgURL", value=(product ? product.imgURL : ''))
		.form-control   
			label(for="desc") Description
			textarea#desc(type="text", name="desc", rows="5")
				| #{product ? product.desc : ''}
		if edit
			button.btn(type="submit") Update Product
		else
			button.btn(type="submit") Add Product
